/**index.wxss**/

page {
  width: 100%;
  height: 100%;
}

.container {
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userAvatar {
  opacity: 0.9;
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 200rpx;
}

.moto-container {
  line-height: normal;
  border: 1px solid #34cc99;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 200rpx;
  padding: 0px;
  outline: none;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  text-align: center;
  color: #34cc99;
}