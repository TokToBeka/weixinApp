.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}

.swiper-container {
  width: 100%;
  position: relative;
}

.swiper_box {
  width: 100%;
  height: 748rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 748rpx;
}

.goods-info {
  background-color: #fff;
  padding: 35rpx 0;
  margin-bottom: 24rpx;
  width: 100%;
  position: relative;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.goods-info .goods-title {
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
  margin-bottom: 28rpx;
  font-weight: bold;
}

.goods-profile {
  display: flex;
  align-items: center;
}

.goods-profile .price-info {
  color: #f2270c;
  font-size: 28rpx;
  margin-left: 30rpx;
}

.goods-profile .price-info .price-main {
  font-size: 60rpx;
}

.goods-profile .price-info .price-decimals {
  font-size: 32rpx;
}

.item-floor{
  background-color: #fff;
  padding: 35rpx 0;
  margin-bottom: 24rpx;
  width: 100%;
  height: 200rpx;
  position: relative;
  border-radius: 30rpx;
}

.discount-floor{
  padding: 0 30rpx;
  display: flex;
  font-size: 26rpx;
}

.discount-title{
  flex: 1;
  font-weight: 700;
}

.discount-content{
  flex: 7;
}

.discount-more{
  flex: 1;
  text-align: center;
}

.coupon{
  position: relative;
  display: inline-block;
  margin-right: 10rpx;
  padding: 0 18rpx 0 24rpx;
  border-top: 2rpx solid #f2270c;
  border-bottom: 2rpx solid #f2270c;
  height: 32rpx;
  line-height: 32rpx;
  color: #f2270c;
  font-size: 20rpx;
}

.coupon::before{
  content: '';
  width: 16rpx;
  height: 32rpx;
  position: absolute;
  left: -20rpx;
  top: -2rpx;
  background-image: url('cloud://youguo-7vd16.796f-youguo-7vd16-1301087841/item-image/ticket.png');
  background-size: 16rpx 32rpx;
  background-repeat: no-repeat;

}

.coupon::after{
  content: '';
  width: 16rpx;
  height: 32rpx;
  position: absolute;
  left: -20rpx;
  top: -2rpx;
  background-image: url('cloud://youguo-7vd16.796f-youguo-7vd16-1301087841/item-image/ticket.png');
  background-size: 16rpx 32rpx;
  background-repeat: no-repeat;
  background-position: -22rpx 0;
}

.discount-more image {
  width: 60rpx;
  height: 50rpx;
  margin-top: -6rpx;
}

.stamp {
  width: 387rpx;
  height: 170rpx;
  padding: 0 10rpx;
  margin-bottom: 50rpx;
  position: relative;
  overflow: hidden;
  }
.stamp:before {
  content: '';
  position: absolute;
  top:0;
  bottom:0;
  left:10rpx;
  right:10rpx;

  z-index: -1;
}
.stamp:after {
  content: '';
  position: absolute;
  left: 10rpx; 
  top: 10rpx; 
  right: 10rpx; 
  bottom: 10rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.5);
  z-index: -2;
}

.stamp label{
  position: absolute;
  left: 40%;
  top: 21rpx;
  height: 1259rpx;
  width: 714rpx;
  background-color: rgba(255,255,255,.15);
  transform: rotate(-20deg);  
  z-index: 1;
}
.stamp .par{
  float: left;
  padding: 16rpx 15rpx;
  width: 380rpx;
  height: 138rpx;
  border-right:2rpx dashed rgba(255,255,255,.3);
  text-align: left;
}

.stamp .par .top-info{
  text-align: center;
  margin-top: 20rpx;
}

.stamp .par .describe{
  color:#fff;
  font-size: 26rpx;
  line-height: 22rpx;
  margin-left: 35rpx;
}
.stamp .par .money{
  font-size: 76rpx;
  color:#fff;
  margin-right: 5rpx;
  line-height: 65rpx;
}
.stamp .par .money::after{
  content: '.00';
}
.stamp .par .sign{
  font-size: 40rpx;
  position: relative;
  top:-5rpx;
  color:rgba(255,255,255,.8);
}
.stamp .par .voucher{
  position: relative;
  top:-5rpx;
  color:rgba(255,255,255,.8);
}
.stamp .copy{
  display: inline-block;
  padding:21rpx 14rpx;
  width:207rpx;
  vertical-align: text-bottom;
  font-size: 30rpx;
  color:rgb(255,255,255);
  text-align: center;
  line-height: initial;
}
.stamp .copy .date{
  font-size: 26rpx;
  margin-top: 10rpx;
}

.stamp04{
  width: 635rpx;
  background: #50ADD3;
  background: radial-gradient(rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 4rpx, #50ADD3 4rpx);
  background-size: 12rpx 8rpx;
  background-position: -5rpx 10rpx;
}
.stamp04:before{
  background-color:#50ADD3;
  left: 5rpx;
  right: 5rpx;
}
.stamp04 .copy{
  padding: 10rpx 6rpx 10rpx 12rpx;
  font-size: 24rpx;
}

.stamp04 .copy .btn1 {
  width: 80%;
  margin-top: 10rpx;

  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  padding: 10rpx 5rpx;
  min-height: 25rpx;
  z-index: 9;
}

.stamp04 .copy .use{
  background-color: burlywood;
  color: white;
}

.stamp04 .copy .useDis{
  background-color: white;
  color: #666666;
}

.button-hover{
  opacity: 0.8;
}
.stamp04 .copy::after {
  border-radius: 98rpx;
  border: 0; 
}

.goods-detail {
  width: 100%;
}

.goods-detail image {
  width: 100%;
  overflow: hidden;
  display: block;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 8rpx 0;
}

.footer-box .contact {
  position: relative;
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #008000;
  box-sizing: border-box;
  background: url("https://cdn.it120.cc/images/weappshop/kefu.png") no-repeat center 21rpx;
  background-size: 55rpx auto;
}

.footer-box .shop-cart-btn {
  position: relative;
  width: 135rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://cdn.it120.cc/images/weappshop/cart.png") no-repeat center 21rpx;
  background-size: 44rpx auto;
}

.footer-box .shop-cart-btn .shop-num {
  position: absolute;
  color: #e64340;
  left: 85rpx;
  top: 10rpx;
}

.footer-box .join-shop-cart {
  text-align: center;
  width: 250rpx;
  height: 100%;
  line-height: 100rpx;
  background-color: #ff6850;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100%;
  width: 250rpx;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 34rpx;
}
