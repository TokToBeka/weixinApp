page {
  /* background-color: #F8F8F8; */
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-section-spacing {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.swiper-item {
  display: block;
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.swiper-item image {
  width: 100%;
  height: 100%;
}

.category-box {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}

.category-list {
  width: 150rpx;
  margin-top: 20rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.category-column {
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}

.category-imgbox {
  width: 80rpx;
  height: 80rpx;
}

.category-title {
  font-size: 24rpx;
  text-align: center;
  margin-top: 10rpx;
}